extends ./layouts/application.pug

block content
  h5.mt-4 Количество найденных аятов по запросу&nbsp;
    i: strong!=query + ':&nbsp;'
    !=verses.length

  .row
    .col: .pl-0
      each verse in verses || []
        p.my-1
          p.p-1.text-muted
            a(href=`/${verse.chapter_id}:${verse.position}`).text-decoration-none.link-body-emphasis
              span.badge.text-bg-secondary.me-1=verse.chapter_id + ':' + verse.position
              span!=verse.text
